@model IEnumerable<ContractMonthlyClaimSystem.Models.ClaimApplication>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class=" btn btn-primary"> <i class="fa fa-plus"></i> Add New Claims</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Claims List </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lecturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumofDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attachment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            
            <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lecturer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumofDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimType.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attachment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Description)
            </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-primary"> <i class="fa fa-plus"></i> Edit</a> |
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class=" btn btn-warning"> <i class="fa fa-eye"></i> View</a> |
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger"> <i class="fa fa-trash"></i> Delete</a>
                        </td> 
        </tr>
}
    </tbody>
</table>
</div>
</div>
